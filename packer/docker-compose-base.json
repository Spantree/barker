{
  "variables": {
    "ami_name": "docker-compose-base",
    "build_number": "{{env `CIRCLE_BUILD_NUM`}}",
    "sha1_hash": "{{env `CIRCLE_SHA1`}}",
    "project_dir": "/usr/src/app"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-81e73cea",
      "instance_type": "c3.large",
      "ssh_username": "ubuntu",
      "ami_name": "{{user `ami_name`}}-{{user `build_number`}}",
      "tags": {
        "Name": "{{user `ami_name`}}",
        "Build-Number": "{{user `build_number`}}",
        "Sha1": "{{user `sha1_hash`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo {{.Path}}",
      "scripts": [
        "../system/scripts/wait-for-cloud-init.sh",
        "../system/scripts/install-docker.sh",
        "../system/scripts/install-docker-compose.sh",
        "../system/scripts/install-consulate.sh",
      ]
    }
  ]
}